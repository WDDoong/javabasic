package accessmodifier.game;

public class Commoner {
	private int level;
	private int hp;
	private int mp;
	private int exp;
	
	public Commoner() {
		level = 1;
		exp = 0;
		hp = 20;
		mp = 10;
	}
	//super(); 사용에 필요한 로직 (아처에 수퍼 있음.)
	public Commoner(int level, int exp, int hp, int mp) {
		this.level = level;
		this.exp = exp;
		this.hp = hp;
		this.mp = mp;
	}
	
	public void AllData() {
		System.out.println("<평민>");
		System.out.println("레벨 : " + level);
		System.out.println("경험치 : " + exp);
		System.out.println("체력 : " + hp);
		System.out.println("마나 : " + mp);
		System.out.println("---------------");
	}
	
}
