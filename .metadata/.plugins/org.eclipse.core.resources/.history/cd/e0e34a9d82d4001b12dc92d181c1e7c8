package accessmodifier.game;

public class Warrior extends Commoner {
	
	private int level;
	private int hp;
	private int mp;
	private int exp;
	
	public Warrior() {
		level = 1;
		exp = 0;
		hp = 20;
		mp = 10;
	}
	
	public void hunt() {
		this.hp -=2;
		this.exp += 10;
	}
	
	public int getLevel() {
		return level;
	}

	public void setLevel(int level) {
		this.level = level;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}

	
	
	public void doubleAttack() {
		System.out.println("<<전사 스킬 사용>>");
		this.mp -=3;
		this.exp +=15;
	}
	
	public void AllData() {
		System.out.println("<전사>");
		System.out.println("레벨 : " + level);
		System.out.println("경험치 : " + exp);
		System.out.println("체력 : " + hp);
		System.out.println("마나 : " + mp);
		System.out.println("---------------");
	}

}
	