	private int level;
	private int atk;
	private int defense;
	
	public Archer() {
		this.level = 1;
		this.exp = 30;
		this.atk = 45;
		this.defense = 30;
		this.hp = 100;
		this.mp = 50;
	}
	
	public void huntMonster01(Monster monster, int atk) {
		
		System.out.println("궁수가 몬스터 공격");
		
	}
	monster.
	
	public void ArcherStatus() {
		System.out.println("체력 ;" + hp);
		System.out.println("마나 ;" + mp);
		System.out.println("경험치 ;" + exp);
		System.out.println("레벨 ;" + level);
		System.out.println("공격력 ;" + atk);
		System.out.println("방어력 ;" + defense);
		System.out.println("-----------------");
	}
	

}
